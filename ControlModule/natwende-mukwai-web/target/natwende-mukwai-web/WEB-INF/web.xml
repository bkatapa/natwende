<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		 xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
		 version="3.1"
		 metadata-complete="false">
  <context-param>
    <param-name>javax.faces.PROJECT_STAGE</param-name>
    <param-value>Development</param-value>
  </context-param>
  <context-param>
    <param-name>primefaces.THEME</param-name>
    <param-value>#{themeSessionAction.operatorTheme}</param-value>
  </context-param>
  <context-param>
    <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>primefaces.FONT_AWESOME</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
    <param-value>true</param-value>
  </context-param>
  <filter>
    <filter-name>PrimeFaces FileUpload Filter</filter-name>
    <filter-class>org.primefaces.webapp.filter.FileUploadFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PrimeFaces FileUpload Filter</filter-name>
    <servlet-name>Faces Servlet</servlet-name>
  </filter-mapping>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
    <url-pattern>*.jsf</url-pattern>
    <url-pattern>/faces/*</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>15</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>/home.xhtml</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>500</error-code>
    <location>/error/defaultError.xhtml</location>
  </error-page>
  <error-page>
    <error-code>408</error-code>
    <location>/login.xhtml</location>
  </error-page>
  <error-page>
    <error-code>400</error-code>
    <location>/home.xhtml</location>
  </error-page>
  <error-page>
    <exception-type>javax.faces.application.ViewExpiredException</exception-type>
    <location>/error/viewExpired.xhtml</location>
  </error-page>
  <security-constraint>
    <display-name>protected-pages</display-name>
    <web-resource-collection>
      <web-resource-name>protected-pages</web-resource-name>
      <url-pattern>/admin/*</url-pattern>
      <url-pattern>/dashboard/*</url-pattern>
      <url-pattern>/report/*</url-pattern>
      <url-pattern>/support/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>SYSTEM_ADMINISTRATOR</role-name>
      <role-name>NATWENDE_ADMINISTRATOR</role-name>
      <role-name>BUS_OPERATOR</role-name>
      <role-name>BUS_ADMINISTRATOR</role-name>
      <role-name>BUS_DRIVER</role-name>
      <role-name>BUS_USER</role-name>
      <role-name>BUS_HOST</role-name>
      <role-name>PASSENGER</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <security-constraint>
    <display-name>Administration</display-name>
    <web-resource-collection>
      <web-resource-name>Admin resources</web-resource-name>
      <description></description>
      <url-pattern>/admin/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <description></description>
      <role-name>SYSTEM_ADMINISTRATOR</role-name>
      <role-name>NATWENDE_ADMINISTRATOR</role-name>
      <role-name>BUS_OPERATOR</role-name>
      <role-name>BUS_ADMINISTRATOR</role-name>
      <role-name>BUS_HOST</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <display-name>Support</display-name>
    <web-resource-collection>
      <web-resource-name>Support resources</web-resource-name>
      <description></description>
      <url-pattern>/support/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <description></description>
      <role-name>NATWENDE_ADMINISTRATOR</role-name>
      <role-name>SYSTEM_ADMINISTRATOR</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <display-name>Passenger</display-name>
    <web-resource-collection>
      <web-resource-name>Passenger resources</web-resource-name>
      <description></description>
      <url-pattern>/passenger/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <description></description>
      <role-name>PASSENGER</role-name>
      <role-name>SYSTEM_ADMINISTRATOR</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Public</web-resource-name>
      <description>Matches a few special pages.</description>
      <url-pattern>/public/*</url-pattern>
      <url-pattern>/javax.faces.resource/*</url-pattern>
      <url-pattern>/error/*</url-pattern>
    </web-resource-collection>
  </security-constraint>
  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>natwende-mukwai</realm-name>
    <form-login-config>
      <form-login-page>/login.xhtml</form-login-page>
      <form-error-page>/login-error.xhtml</form-error-page>
    </form-login-config>
  </login-config>
  <context-param>
    <description>State saving method: 'client' or 'server' (=default). See JSF Specification 2.5.2</description>
    <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
    <param-value>server</param-value>
  </context-param>
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>resources.application</param-value>
  </context-param>
  <security-role>
    <description></description>
    <role-name>SYSTEM_ADMINISTRATOR</role-name>
  </security-role>
  <security-role>
    <description></description>
    <role-name>NATWENDE_ADMINISTRATOR</role-name>
  </security-role>
  <security-role>
    <description></description>
    <role-name>INTEGRATION</role-name>
  </security-role>
  <security-role>
    <description></description>
    <role-name>BUS_OPERATOR</role-name>
  </security-role>
  <security-role>
    <description></description>
    <role-name>BUS_ADMINISTRATOR</role-name>
  </security-role>
  <security-role>
    <description></description>
    <role-name>BUS_DRIVER</role-name>
  </security-role>
  <security-role>
    <description></description>
    <role-name>BUS_USER</role-name>
  </security-role>
  <security-role>
    <description></description>
    <role-name>BUS_HOST</role-name>
  </security-role>
  <security-role>
    <description></description>
    <role-name>PASSENGER</role-name>
  </security-role>
  <mime-mapping>
    <extension>woff</extension>
    <mime-type>application/font-woff</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>woff2</extension>
    <mime-type>application/font-woff2</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>eot</extension>
    <mime-type>application/vnd.ms-fontobject</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>svg</extension>
    <mime-type>image/svg+xml</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>ttf</extension>
    <mime-type>application/x-font-ttf</mime-type>
  </mime-mapping>
</web-app>